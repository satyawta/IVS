<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/onboarding_i"
        android:scaleType="fitXY"
        android:src="@drawable/onboarding_i_nv" />

    <Button
        android:layout_width="165.3dp"
        android:layout_height="46.7dp"
        android:layout_gravity="bottom|start"
        android:textAllCaps="false"
        android:fontFamily="@font/montserrat_semibold"
        android:text="@string/next"
        android:id="@+id/onboarding_button_i"
        android:layout_marginStart="30.3dp"
        android:layout_marginLeft="30.3dp"
        android:layout_marginBottom="29.3dp"
        android:layout_alignParentBottom="true"
        android:textSize="15.3sp"
        android:background="@drawable/custom_button_drawable"
        android:textColor="#ffffff" />

</RelativeLayout>