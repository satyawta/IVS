<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo"
        android:paddingTop="@dimen/image_top_padding"
        android:paddingBottom="@dimen/image_bottom_padding"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/image_bottom_padding"
        android:letterSpacing="-0.03"
        android:fontFamily="@font/arlrdbd"
        android:textColor="#000000"
        android:textSize="26.3sp"
        android:text="@string/indian_vedic_school"
        tools:ignore="UnusedAttribute" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13.7sp"
        android:layout_below="@+id/title"
        android:id="@+id/reset_password"
        android:paddingTop="47.7dp"
        android:paddingBottom="18dp"
        android:textColor="#252525"
        android:letterSpacing="0.03"
        android:layout_centerInParent="true"
        tools:text="@string/reset_password" />

    <EditText
        android:layout_width="@dimen/textbox_width"
        android:layout_height="@dimen/textbox_height"
        android:id="@+id/email"
        android:text="@string/john_doe"
        android:layout_marginTop="@dimen/edit_top_padding"
        android:textAlignment="center"
        android:inputType="textPassword"
        android:maxLines="1"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/reset_password"
        android:background="@drawable/border_for_textbox" />

    <EditText
        android:layout_width="@dimen/textbox_width"
        android:layout_height="@dimen/textbox_height"
        android:id="@+id/loginpassword"
        android:text="@string/john_doe"
        android:inputType="textPassword"
        android:maxLines="1"
        android:layout_marginTop="@dimen/edit_top_padding"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/email"
        android:background="@drawable/border_for_textbox" />


    <Button
        android:layout_width="@dimen/textbox_width"
        android:layout_height="@dimen/textbox_height"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:id="@+id/reset_password_button"
        android:text="@string/reset_pwd"
        android:layout_marginTop="@dimen/edit_top_padding"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:layout_below="@+id/loginpassword"
        android:background="@drawable/custom_button_drawable" />

</RelativeLayout>