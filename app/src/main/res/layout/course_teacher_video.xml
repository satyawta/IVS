    <View
        android:id="@+id/teacher_profile_view_top"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_below="@+id/course_rating_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22.7dp" />

    <TextView
        android:id="@+id/about_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teacher_profile_view_top"
        android:layout_marginLeft="65.7dp"
        android:layout_marginStart="65.7dp"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="0.7sp"
        android:text="@string/about"
        android:textColor="#363535"
        android:textSize="15.3sp" />

    <TextView
        android:id="@+id/about_Courses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/about"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/about"
        android:layout_below="@+id/teacher_profile_view_top"
        android:layout_marginLeft="228.3dp"
        android:layout_marginStart="228.3dp"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="0.7sp"
        android:paddingEnd="77.7dp"
        android:paddingRight="77.7dp"
        android:text="@string/videos_title"
        android:textColor="#363535"
        android:textSize="15.3sp" />

    <View
        android:id="@+id/teacher_profile_view_bottom"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_below="@+id/about_Courses"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22.7dp" />

    <FrameLayout
        android:id="@+id/video_play_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/teacher_profile_view_bottom">

        <ImageView
            android:id="@+id/videoimage"
            android:layout_width="131.3dp"
            android:layout_height="76.3dp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="21.3dp"
            android:src="@drawable/video_thumbnail" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical|center_horizontal|center"
            android:src="@drawable/lock_6" />

    </FrameLayout>

    <TextView
        android:id="@+id/classnumber_video_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teacher_profile_view_bottom"
        android:layout_marginTop="21dp"
        android:layout_toEndOf="@+id/video_play_course"
        android:layout_toRightOf="@+id/video_play_course"
        android:paddingLeft="19dp"
        android:text="Class 1"
        android:textColor="#7a7a7a"
        android:textSize="9.9sp" />

    <TextView
        android:id="@+id/classname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/classnumber_video_course"
        android:layout_marginTop="8.7dp"
        android:layout_toEndOf="@+id/video_play_course"
        android:layout_toRightOf="@+id/video_play_course"
        android:paddingLeft="19dp"
        android:text="@string/class1_name"
        android:textColor="#000000"
        android:textSize="15.5sp" />

    <ImageView
        android:id="@+id/videoplay_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/classname"
        android:layout_marginTop="16.7dp"
        android:layout_toEndOf="@+id/video_play_course"
        android:layout_toRightOf="@+id/video_play_course"
        android:paddingLeft="19dp"
        android:src="@drawable/video_camera" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/video_time"
        android:layout_below="@+id/video_play_course"
        android:layout_centerHorizontal="true"
        android:letterSpacing="0.1"
        android:text="03:45"
        android:textColor="#000000"
        android:textSize="9.9sp" />
    <View
        android:id="@+id/teacher_profile_view_video"
        android:layout_width="316.3dp"
        android:layout_height="0.7dp"
        android:layout_below="@+id/video_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22.7dp" />
    <include layout="@layout/video_footer"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/teacher_profile_view_video"/>

</RelativeLayout>