<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/teacher_cardview"
    android:layout_marginLeft="22dp"
    android:layout_marginTop="16.7dp"
    android:background="@drawable/frame">

    <RelativeLayout
        android:layout_width="144.7dp"
        android:layout_height="102.3dp">

        <TextView
            android:id="@+id/teacher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView5"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/textView5"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:text="@string/srimathi_devi_rani"
            android:textColor="#2b2b2b"
            android:textSize="13.3sp" />

        <TextView
            android:id="@+id/rating"
            android:layout_width="28dp"
            android:layout_height="21dp"
            android:textAlignment="center"
            android:layout_marginTop="9.7dp"
            android:layout_below="@id/teacher_name"
            android:background="@drawable/custom_rectangle_drawable"
            android:layout_marginLeft="19dp"
            android:text="@string/review_value"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9.9sp"
            android:textColor="#2b2b2b"
            android:layout_marginTop="9.7dp"
            android:layout_marginLeft="5.3dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/teacher_name"
            android:layout_toRightOf="@id/rating"
            android:text="23 Reviews"
            android:id="@+id/textView5" />

        <TextView
            android:id="@+id/course_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9.9sp"
            android:textColor="#2b2b2b"
            android:layout_marginLeft="13.3dp"
            android:layout_below="@+id/rating"
            android:layout_marginTop="9.3dp"
            android:layout_marginBottom="13.3dp"
            android:text="Course: INR 2,000" />
    </RelativeLayout>
</android.support.v7.widget.CardView>