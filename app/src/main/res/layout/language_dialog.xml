<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/frame">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15.5sp"
        android:fontFamily="@font/helveticaneueltstd_md"
        android:id="@+id/language_selection"
        android:textColor="#2b2b2b"
        android:text="Select Language"
        android:layout_marginTop="26.3dp"
        android:layout_centerHorizontal="true" />

    <android.support.v7.widget.CardView
        android:layout_width="79.3dp"
        android:layout_height="90.7dp"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/language_card_english"
        android:layout_below="@id/language_selection">

        <RelativeLayout
            android:layout_width="79.3dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/english_image"
                android:layout_width="20.7dp"
                android:layout_height="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="29.7dp"
                android:layout_marginLeft="29dp"
                android:layout_gravity="center"
                android:src="@drawable/english_hdpi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/english_image"
                android:layout_centerInParent="true"
                android:layout_marginTop="15.3dp"
                android:layout_marginBottom="18dp"
                android:text="English"
                android:textSize="15.5sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="79.3dp"
        android:layout_height="90.7dp"
        android:layout_marginTop="17dp"
        android:layout_toRightOf="@+id/language_card_english"
        android:layout_marginLeft="16.7dp"
        android:id="@+id/language_card_telugu"
        android:layout_below="@id/language_selection">

        <RelativeLayout
            android:layout_width="79.3dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/telugu_image"
                android:layout_width="20.7dp"
                android:layout_height="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="29.7dp"
                android:layout_marginLeft="29dp"
                android:layout_gravity="center"
                android:src="@drawable/telugu_alphabet" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/telugu_image"
                android:layout_centerInParent="true"
                android:layout_marginTop="15.3dp"
                android:layout_marginBottom="18dp"
                android:text="Telugu"
                android:textSize="15.5sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="79.3dp"
        android:layout_height="90.7dp"
        android:layout_marginTop="17dp"
        android:layout_toRightOf="@+id/language_card_telugu"
        android:layout_marginLeft="16.3dp"
        android:id="@+id/language_card_hindi"
        android:layout_below="@id/language_selection">

        <RelativeLayout
            android:layout_width="79.3dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/hindi_image"
                android:layout_width="20.7dp"
                android:layout_height="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="29.7dp"
                android:layout_marginLeft="29dp"
                android:layout_gravity="center"
                android:src="@drawable/hindi_hdpi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hindi_image"
                android:layout_centerInParent="true"
                android:layout_marginTop="15.3dp"
                android:layout_marginBottom="18dp"
                android:text="Hindi"
                android:textSize="15.5sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <Button
        android:id="@+id/language_dialog"
        android:layout_width="328.7dp"
        android:layout_height="59dp"
        android:layout_below="@+id/language_card_english"
        android:layout_marginTop="28.7dp"
        android:background="@drawable/custom_button_drawable"
        android:text="Next"
        android:textAllCaps="false" />


</RelativeLayout>