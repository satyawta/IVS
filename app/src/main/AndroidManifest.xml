<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wta.IVS">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:name=".app.AppController"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_application_id" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" />
        <activity android:name=".splashscreen">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SlidesActivity" android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".Login" android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".landingscreen" android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".teacher_profile" android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".teacher_pay_course" android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".payment_successful" android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".payment" android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".payment_teacher_videos" android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".payment_unsuccessful" android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".payment_teacher_course" android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".reset_password_email" android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".reset_password" android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".login_successful" android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".forget_password" android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>